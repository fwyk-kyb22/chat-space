.main_chat__message_list__container 
  .main_chat__message_list__container__name
    = message.user.name
  .main_chat__message_list__container__created_at
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main_chat__message_list__container__message
    - if message.content.present?
      %p.main_chat__message_list__container__message__content
        = message.content
    = image_tag message.image.url, class: 'main_chat__message_list__container__message__image' if message.image.present?