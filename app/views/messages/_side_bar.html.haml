.side_bar
  .side_bar__header
    .side_bar__header__box
      .side_bar__header__box__user_name
        = current_user.name
      .side_bar__header__box__icons
        = link_to edit_user_path(current_user.id) do
          = icon('fas', 'cog', class: 'side_bar__header__box__icons--icon')
        = link_to  new_group_path do
          = icon('far', 'edit', class: 'side_bar__header__box__icons--icon')
  .side_bar__group_list
    .side_bar__group_list__group_name
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group),class: "group__link" do
            .group__name
              = group.name
            .group__message
              = group.show_last_message